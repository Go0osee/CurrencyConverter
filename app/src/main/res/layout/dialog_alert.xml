<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:background="@color/white"
    android:padding="24dp">

    <TextView
        android:id="@+id/titleAlphabetically"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alphabetically"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alphabeticallyAscending"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/ascending"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/titleAlphabetically"
        app:layout_constraintTop_toBottomOf="@+id/titleAlphabetically" />

    <TextView
        android:id="@+id/alphabeticallyDescending"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/descending"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/titleAlphabetically"
        app:layout_constraintTop_toBottomOf="@+id/alphabeticallyAscending" />

    <TextView
        android:id="@+id/titleByValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/by_value"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/titleAlphabetically"
        app:layout_constraintTop_toBottomOf="@+id/alphabeticallyDescending" />

    <TextView
        android:id="@+id/byValueAscending"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/ascending"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/titleAlphabetically"
        app:layout_constraintTop_toBottomOf="@+id/titleByValue" />

    <TextView
        android:id="@+id/byValueDescending"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/descending"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/titleAlphabetically"
        app:layout_constraintTop_toBottomOf="@+id/byValueAscending" />


</androidx.constraintlayout.widget.ConstraintLayout>